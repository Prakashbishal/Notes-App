<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9370db"
    tools:context=".DataInsertActivity">

    <EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:ems="10"
        android:hint="Enter the title"
        android:inputType="text"
        android:minHeight="45dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/disp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/disp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/disp"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_edit_text_bg"
        android:ems="10"
        android:gravity="top"
        android:hint="Enter the note"
        android:inputType="textMultiLine"
        android:minHeight="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:background="@drawable/rounded_button_bg"
        android:text="Add Note"
        app:layout_constraintEnd_toEndOf="@+id/disp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/disp"
        app:layout_constraintTop_toBottomOf="@+id/disp" />

</androidx.constraintlayout.widget.ConstraintLayout>
